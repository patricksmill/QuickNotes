<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory 
        android:title="Notifications">

        <Preference
            android:key="pref_manage_notifications"
            android:title="Manage notifications"
            android:summary="Open system notification settings"
            android:icon="@drawable/ic_bell"/>
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="pref_category_tags"
        android:title="Tagging">

        <SeekBarPreference
            android:key="auto_tag_limit"
            android:title="Auto-Tag Limit"
            android:summary="%s tags per note"
            android:defaultValue="3"
            android:min="0"
            android:max="5"
            android:icon="@drawable/ic_autotag" />


    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_category_AI"
        android:title="AI Features">

        <SwitchPreferenceCompat
            android:key="pref_ai_auto_tag"
            android:title="AI-powered Auto-Tagging"
            android:summaryOff="Using keyword-based tagging"
            android:summaryOn="Using AI tagging"
            android:defaultValue="false"
            android:icon="@drawable/ic_autotag" />

        <SwitchPreferenceCompat
            android:key="pref_ai_confirm"
            android:title="Confirm AI tag suggestions"
            android:summary="Show suggestions before applying tags"
            android:defaultValue="false"
            android:icon="@drawable/ic_check" />

        <EditTextPreference
            android:key="openai_api_key"
            android:title="OpenAI API Key"
            android:summary="Required for AI features"
            android:dialogTitle="Enter OpenAI API Key"
            android:inputType="textPassword"
            android:icon="@drawable/ic_key" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_category_danger"
        android:title="Danger Zone">

        <Preference
            android:key="pref_delete_all"
            android:title="Delete All Notes"
            android:summary="Permanently remove all notes (CANNOT BE UNDONE)"
            android:icon="@drawable/ic_delete" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Help">

        <Preference
            android:key="pref_replay_tutorial"
            android:title="Replay Tutorial"
            android:summary="Go through the onboarding tutorial again"
            android:icon="@drawable/ic_replay" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <Preference
            android:key="app_version"
            android:title="QuickNotes"
            android:summary="Version 1.0.0 - Your intelligent note companion"
            android:selectable="false"
            android:icon="@drawable/ic_info" />

    </PreferenceCategory>

</PreferenceScreen>
